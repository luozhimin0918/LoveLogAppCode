<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"  android:gravity="center_vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:orientation="horizontal"  android:gravity="center_vertical"   android:padding="10dp" android:layout_width="fill_parent"  android:layout_height="wrap_content"  android:background="@color/white"  >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/list_item_moneyName"
                    android:layout_width="wrap_content"
                    android:textColor="#5D5D5D"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" android:text="商品金额"/>
                <TextView
                    android:id="@+id/moneyJin"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥49.00  "
                    android:textColor="@color/top_bar_bgColor"
                    android:textSize="18sp" />


            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>

</LinearLayout>