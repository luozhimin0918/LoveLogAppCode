<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"  android:gravity="center_vertical" android:layout_marginTop="@dimen/space_10"  android:padding="10dp" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/button_press_gray_white_select">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_adapter_grid_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/loading_small" />
        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/space_10"
            android:orientation="vertical"
            android:layout_width="10000dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/goodDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="上海市来得快斯蒂芬第三方的打算斯蒂芬 大是大非"
                android:textColor="#5D5D5D"
                android:textSize="16sp" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/numBer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="x1"
                    android:textColor="#5D5D5D"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/goodsType"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="青春版"
                    android:textColor="#5D5D5D"
                    android:textSize="16sp" />
            </LinearLayout>
            <TextView
                android:id="@+id/shopPrice"
                android:layout_marginTop="@dimen/space_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="￥49.00  "
                android:textColor="@color/top_bar_bgColor"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" android:background="@mipmap/more" />


</LinearLayout>