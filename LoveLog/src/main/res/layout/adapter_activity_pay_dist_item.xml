<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginTop="@dimen/space_8"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="30dp">


                    <ImageView
                        android:id="@+id/imageTitle"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/wait_money_icon_kuaidi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:id="@+id/payMethodText"
                        android:text="支付方式"
                        android:gravity="center_vertical"
                        android:textSize="15sp"
                        android:layout_marginLeft="@dimen/space_5"
                        android:textColor="@color/text_back_color"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent" />






            </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginBottom="@dimen/space_10"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <com.hhl.library.FlowTagLayout
                android:id="@+id/size_flow_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



            <View
            android:background="@color/connet_bgColor"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_width="fill_parent"
            android:layout_height="2dp"></View>



            <LinearLayout
                android:layout_marginLeft="@dimen/space_15"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10"
               android:orientation="horizontal"
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/PaydesInfo"
                    android:text=""
                    android:textSize="15sp"
                    android:textColor="@color/text_back_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
           </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/connet_bgColor"
        android:layout_width="fill_parent"
        android:layout_height="10dp"></View>

</LinearLayout>